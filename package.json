{
  "name": "chat",
  "version": "0.0.1",
  "description": "A toy implementation of a socket.io chat app",
  "main": "index.js",
  "scripts": {
    "babel-build": "babel src --out-dir build",
    "babel-watch": "babel src --watch --out-dir build --ignore src/entries",
    "build": "npm run babel-build && npm run webpack-build",
    "dev": "concurrently 'npm run babel-watch' 'npm run node-watch' 'npm run webpack-watch'",
    "remote-install": "./scripts/install.sh",
    "node-watch": "nodemon build/index.js",
    "push": "./scripts/push_prod.sh",
    "start": "node build/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "webpack-build": "webpack",
    "webpack-watch": "webpack-dev-server --hot --inline"
  },
  "repository": "https://ryardley@bitbucket.org/ryardley/chat.git",
  "author": "Rudi Yardley <contact@rudiyardley.com> (http://rudiyardley.com)",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-es2015-modules-commonjs-simple": "^6.7.4",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-webpack": "^6.4.1",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "concurrently": "^2.2.0",
    "express": "^4.14.0",
    "pug": "^2.0.0-beta4",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-hot-loader": "^1.3.0",
    "webpack": "^1.13.1"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.11.0",
    "eslint-plugin-jsx-a11y": "^1.5.5",
    "eslint-plugin-react": "^5.2.2",
    "webpack-dev-server": "^1.14.1"
  }
}
